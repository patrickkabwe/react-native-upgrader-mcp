{
    "name": "react-native-upgrader-mcp",
    "version": "1.0.0",
    "description": "A Model Context Protocol (MCP) server that streamlines React Native project upgrades. It provides developers with automated tools to seamlessly upgrade React Native CLI projects to any desired version or the latest stable release. The MCP Server uses `rn-diff-purge` to generate the diff.",
    "module": "lib/index.js",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "type": "module",
    "author": "Patrick Kabwe",
    "license": "MIT",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "release": "release-it"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/patrickkabwe/react-native-upgrader-mcp"
    },
    "keywords": [
        "modelcontextprotocol",
        "mcp",
        "react-native",
        "react-native-mcp",
        "react-native-upgrader-mcp",
        "react-native-upgrader"
    ],
    "bin": {
        "react-native-upgrader-mcp": "./lib/index.js"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.16.0",
        "@release-it/bumper": "^7.0.5",
        "@release-it/conventional-changelog": "^10.0.1",
        "release-it": "^19.0.4",
        "tsup": "^8.5.0"
    },
    "release-it": {
        "npm": {
            "publish": true
        },
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}",
            "requireCleanWorkingDir": false
        },
        "github": {
            "release": true
        },
        "hooks": {
            "before:init": "bun typecheck",
            "after:bump": "bun run build"
        },
        "plugins": {
            "@release-it/bumper": {},
            "@release-it/conventional-changelog": {
                "infile": "CHANGELOG.md",
                "preset": {
                    "name": "conventionalcommits",
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "perf",
                            "section": "üí® Performance Improvements"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "chore(deps)",
                            "section": "üõ†Ô∏è Dependency Upgrades"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation"
                        }
                    ]
                }
            }
        }
    }
}
